# .env.example
# Copy to .env and fill in actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SERVICE_NAME=cashappagent

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://cashappuser:your-password@localhost:5432/cashappagent
POSTGRES_USER=cashappuser
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=cashappagent

# Connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================
# Service Principal
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Storage Account
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=documents

# Key Vault
AZURE_KEY_VAULT_URL=https://kv-cashappagent-dev.vault.azure.net/

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# =============================================================================
# ERP SYSTEMS CONFIGURATION
# =============================================================================

# NetSuite
NETSUITE_ACCOUNT_ID=your-netsuite-account
NETSUITE_CONSUMER_KEY=your-consumer-key
NETSUITE_CONSUMER_SECRET=your-consumer-secret
NETSUITE_TOKEN_ID=your-token-id
NETSUITE_TOKEN_SECRET=your-token-secret
NETSUITE_RESTLET_URL=https://your-account.restlets.api.netsuite.com/app/site/hosting/restlet.nl?script=123&deploy=1

# SAP
SAP_BASE_URL=https://your-sap-system.com
SAP_USERNAME=your-sap-username
SAP_PASSWORD=your-sap-password
SAP_CLIENT_ID=your-oauth-client-id
SAP_COMPANY_CODE=1000

# QuickBooks
QUICKBOOKS_CLIENT_ID=your-qb-client-id
QUICKBOOKS_CLIENT_SECRET=your-qb-client-secret
QUICKBOOKS_SANDBOX=true
QUICKBOOKS_COMPANY_ID=your-company-id

# =============================================================================
# COMMUNICATION SETTINGS
# =============================================================================

# Email Configuration
DEFAULT_SENDER_EMAIL=ar-team@company.com
DEFAULT_SENDER_NAME=Accounts Receivable Team
COMPANY_NAME=Your Company Name
CC_AR_TEAM=true

# Customer Portal
CUSTOMER_PORTAL_URL=https://portal.company.com
DASHBOARD_URL=https://dashboard.company.com

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#cashapp-alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# Model Configuration
LAYOUTLM_MODEL_PATH=microsoft/layoutlmv3-base
LLAMA_MODEL_PATH=meta-llama/Meta-Llama-3-8B-Instruct
MODEL_CACHE_DIR=/app/models

# GPU Settings
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Processing Limits
MAX_DOCUMENTS_PER_REQUEST=10
MAX_BATCH_SIZE=100
PROCESSING_TIMEOUT_SECONDS=300
TORCH_COMPILE=false
ENABLE_ATTENTION_SLICING=true

# =============================================================================
# BUSINESS RULES CONFIGURATION
# =============================================================================

# Matching Rules
CONFIDENCE_THRESHOLD=0.85
AMOUNT_TOLERANCE_PERCENT=0.01
MAX_INVOICE_AGE_DAYS=90
AUTO_APPLY_THRESHOLD=1000.00
REQUIRE_APPROVAL_ABOVE=50000.00

# Processing Limits
MAX_CONCURRENT_PROCESSING=50
PROCESSING_TIMEOUT_SECONDS=300
ENABLE_MULTI_CURRENCY=true
DEFAULT_CURRENCY=USD

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Grafana
GRAFANA_PASSWORD=your-grafana-password
GRAFANA_PORT=3000

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/cashappagent.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# =============================================================================
# BACKUP & SECURITY
# =============================================================================

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Security
ENCRYPT_SENSITIVE_DATA=true
LOG_EMAIL_CONTENT=false  # Set to false for privacy compliance
SECURITY_SCAN_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=false
PYTEST_ADDOPTS=-v --tb=short --strict-markers

# Testing  base
TEST_DATABASE_URL=postgresql://cashappuser:password@localhost:5432/cashappagent_test

# Mock Services (for testing)
MOCK_ERP_RESPONSES=false
MOCK_ML_MODELS=false
MOCK_EMAIL_SENDING=true
